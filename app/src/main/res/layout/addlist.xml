<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/CustomTheme"
    android:layout_gravity="start"
    android:id="@+id/addListLayout">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        app:layout_constraintTop_toTopOf="@+id/addListLayout"
        android:id="@+id/categoryLayout"
        android:stretchColumns="1"
        android:layout_marginEnd="15dp"
        style="@style/CustomTheme">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:id="@+id/category"
                app:layout_constraintTop_toTopOf="@+id/addListLayout"
                app:layout_constraintStart_toStartOf="@+id/addListLayout"
                style="@style/TableNameTheme">
            </TextView>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/item_name"
                app:layout_constraintEnd_toStartOf="@+id/listName"
                app:layout_constraintEnd_toEndOf="@+id/addListLayout"
                app:layout_constraintTop_toTopOf="@+id/addListLayout"
                android:maxLength="10"
                android:inputType="text"
                android:backgroundTint="@color/primaryColor">
            </EditText>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item"
                style="@style/TableNameTheme"
                android:id="@+id/listName"
                app:layout_constraintTop_toTopOf="@+id/item_category"
                app:layout_constraintStart_toStartOf="@+id/addListLayout">
            </TextView>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/item_category"
                app:layout_constraintEnd_toStartOf="@+id/category"
                app:layout_constraintEnd_toEndOf="@+id/addListLayout"
                app:layout_constraintTop_toTopOf="@+id/addListLayout"
                android:maxLength="10"
                android:inputType="text"
                android:backgroundTint="@color/primaryColor">
            </EditText>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aboutLink"
                style="@style/TableNameTheme"
                android:id="@+id/link"
                app:layout_constraintTop_toTopOf="@+id/item_category"
                app:layout_constraintStart_toStartOf="@+id/addListLayout">
            </TextView>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/item_link"
                app:layout_constraintEnd_toStartOf="@+id/category"
                app:layout_constraintEnd_toEndOf="@+id/addListLayout"
                app:layout_constraintTop_toTopOf="@+id/addListLayout"
                android:inputType="text"
                android:backgroundTint="@color/primaryColor">
            </EditText>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tag"
                style="@style/TableNameTheme"
                android:id="@+id/tagText"
                app:layout_constraintTop_toTopOf="@+id/item_category"
                app:layout_constraintStart_toStartOf="@+id/addListLayout">
            </TextView>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/item_tag"
                app:layout_constraintEnd_toStartOf="@+id/category"
                app:layout_constraintEnd_toEndOf="@+id/addListLayout"
                app:layout_constraintTop_toTopOf="@+id/addListLayout"
                android:inputType="text"
                android:backgroundTint="@color/primaryColor">
            </EditText>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>